<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="./css/style.css" />
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  <script type="module" src="./js/script.js" defer></script>
  <title><%= title %></title> <!-- Dynamic title -->
</head>
<body>
  <div class="container">
    <header>
      <h1 class="title"><%= headerTitle %></h1> <!-- Dynamic header title -->
    </header>
    <main class="content">
      <section class="data" id="data">
        <header class="header">
          <h2 class="header__title"><%= sectionTitle %></h2> <!-- Dynamic section title -->
        </header>

        <!-- ENGLISH FIELDS -->
        <div id="englishFields">
          <input class="data__input" type="text" name="Name_EN" placeholder="<%= fieldNameEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="LastName_EN" placeholder="<%= fieldLastNameEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Department_EN" placeholder="<%= fieldDepartmentEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Occupation_EN" placeholder="<%= fieldOccupationEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="CompanyName_EN" placeholder="<%= fieldCompanyNameEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Street_EN"    placeholder="<%= fieldStreetEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="POBox_EN"     placeholder="<%= fieldPOBoxEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Region_EN"    placeholder="<%= fieldRegionEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="City_EN"      placeholder="<%= fieldCityEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Postal_EN"    placeholder="<%= fieldPostalEN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Country_EN"   placeholder="<%= fieldCountryEN %>" /> <!-- Dynamic placeholder -->
        </div>

        <!-- MONGOLIAN FIELDS -->
        <div id="mongolianFields" style="display:none">
          <input class="data__input" type="text" name="Name_MN" placeholder="<%= fieldNameMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="LastName_MN" placeholder="<%= fieldLastNameMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Department_MN" placeholder="<%= fieldDepartmentMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Occupation_MN" placeholder="<%= fieldOccupationMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="CompanyName_MN" placeholder="<%= fieldCompanyNameMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Street_MN"    placeholder="<%= fieldStreetMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="POBox_MN"     placeholder="<%= fieldPOBoxMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Region_MN"    placeholder="<%= fieldRegionMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="City_MN"      placeholder="<%= fieldCityMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Postal_MN"    placeholder="<%= fieldPostalMN %>" /> <!-- Dynamic placeholder -->
          <input class="data__input" type="text" name="Country_MN"   placeholder="<%= fieldCountryMN %>" /> <!-- Dynamic placeholder -->
        </div>

        <!-- COMMON FIELDS -->
        <input class="data__input" type="tel" name="Phone" placeholder="<%= fieldPhone %>" /> <!-- Dynamic placeholder -->
        <input class="data__input" type="email" name="Email" placeholder="<%= fieldEmail %>" /> <!-- Dynamic placeholder -->
        <input class="data__input" type="text" name="Website" placeholder="<%= fieldWebsite %>" /> <!-- Dynamic placeholder -->
        <div class="data__message"><%= message %></div> <!-- Dynamic message -->
      </section>

      <section class="qr" id="qr"></section>

      <section class="btn-panel">
        <button id="generateQr" disabled><%= generateQrText %></button> <!-- Dynamic text -->
        <button id="download" disabled><%= downloadText %></button> <!-- Dynamic text -->
        <select name="extension" disabled>
          <option value="png">png</option>
          <option value="jpeg">jpeg</option>
          <option value="svg">svg</option>
          <option value="webp">webp</option>
        </select>
      </section>

      <section class="options">
        <label for="languageSelect"><%= languageLabel %></label> <!-- Dynamic label -->
        <select id="languageSelect">
          <option value="EN" selected><%= englishOption %></option> <!-- Dynamic option -->
          <option value="MN"><%= mongolianOption %></option> <!-- Dynamic option -->
        </select>
      </section>
    </main>
  </div>
</body>
</html>
