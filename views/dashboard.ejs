<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Employee Dashboard</title>
        <script src="/js/dashboard.js"></script>
        <link rel="stylesheet" href="/css/dashboard.css">
        <script>
            function confirmDelete(employeeId) {
                if (confirm('Are you sure you want to delete this employee?')) {
                    window.location.href = '/delete-employee/' + employeeId;
                }
            }
        </script>
    </head>
    <body>
        <header>
            <h1>Employee Dashboard</h1>
            <nav>
                <% if (user) { %>
                    <p>Welcome, <%= user.username %></p> |
                    <a href="/logout">Logout</a>
                <% } else { %>
                    <a href="/login">Login</a>
                <% } %>
            </nav>
        </header>
        <main class="container">
        <section class="employee-list">
            <h2>List of Employees</h2>
            <div class="search-container">
                <input type="text" id="searchBox" placeholder="Search employees..." oninput="filterTable()">
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Name (MN)</th>
                        <th>Department (MN)</th>
                        <th>Occupation (MN)</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="employee-table-body">
                    <%- include('_employee_table_body') %>
                </tbody>
            </table>
            <a href="/add-employee" class="add-employee-button">Add Employee</a>
        </section>
        </main>
        <footer>
            <p>&copy; 2025 vCard Generator</p>
        </footer>
    </body>
    </html>