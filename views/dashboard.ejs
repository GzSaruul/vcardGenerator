<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script>
        function confirmDelete(employeeId) {
            if (confirm('Are you sure you want to delete this employee?')) {
                window.location.href = '/delete-employee/' + employeeId;
            }
        }
    </script>
</head>
<body>
    <header>
        <h1>Employee Dashboard</h1>
        <nav>
            <% if (user) { %>
                <p>Welcome, <%= user.username %></p> |
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login">Login</a>
            <% } %>
        </nav>
    </header>

    <main class="container">
        <section class="employee-list">
            <h2>List of Employees</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (employees && employees.length > 0) { %>
                        <% employees.forEach(employee => { %>
                            <tr>
                                <td><%= employee.Name_EN %> <%= employee.LastName_EN %></td>
                                <td><%= employee.Email %></td>
                                <td>
                                    <a href="/edit-profile/<%= employee.id %>">Edit</a> |
                                    <a href="/card/<%= employee.id %>">View Card</a> |
                                    <button onclick="confirmDelete('<%= employee.id %>')">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="3">No employees found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <a href="/add-employee" class="add-employee-button">Add Employee</a>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 vCard Generator</p>
    </footer>
</body>
</html>