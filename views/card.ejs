<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Employee Info</title>
  <link rel="icon" type="image/x-icon" href="/public/assets/favicon.ico">
  <script>const employeeData = <%- JSON.stringify(employee) %>;</script>
  <link rel="stylesheet" href="/css/card.css"/>
  <script type="module" src="/js/card.js"></script>  
</head>
<body>
  <div class="container">
    <div class="back-button">
      <button onclick="window.location.href='/dashboard'">← Буцах</button>
    </div>

    <h1>Ажилтаны мэдээлэл</h1>

    <div class="info-wrapper" style="display: flex; gap: 2rem; flex-wrap: wrap;">

      <!-- English Section -->
      <section class="info-block" style="flex: 1;">
        <h2>English</h2>
        <p><strong>Name:</strong><%= employee.Name_EN %> <%= employee.LastName_EN %></strong></p>
        <p><strong>Department:</strong> <%= employee.Department_EN %></p>
        <p><strong>Occupation:</strong> <%= employee.Occupation_EN %></p>
        <p><strong>Company:</strong> <%= employee.CompanyName_EN %></p>

        <h3><strong>Contact Info:</strong></h3>
        <p><strong>Phone:</strong> <%= employee.Phone %></p>
        <p><strong>Email:</strong> <%= employee.Email %></p>
        <p><strong>Website:</strong> <%= employee.Website %></p>

        <h3><strong>Address:</strong></h3>
        <p>
          <%= employee.Street_EN %>, 
          <%= employee.City_EN %>, 
          <%= employee.Region_EN %>, 
          <%= employee.POBox_EN %>, 
          <%= employee.Postal_EN %>, 
          <%= employee.Country_EN %>
        </p>
      </section>

      <!-- Mongolian Section -->
      <section class="info-block" style="flex: 1;">
        <h2>Mongolian</h2>
        <p><strong>Нэр:</strong><%= employee.Name_MN %> <%= employee.LastName_MN %></p>
        <p><strong>Хэлтэс:</strong> <%= employee.Department_MN %></p>
        <p><strong>Албан тушаал:</strong> <%= employee.Occupation_MN %></p>
        <p><strong>Компани:</strong> <%= employee.CompanyName_MN %></p>

        <h3><strong>Холбоо барих:</strong></h3>
        <p><strong>Утас:</strong> <%= employee.Phone %></p>
        <p><strong>И-мэйл:</strong> <%= employee.Email %></p>
        <p><strong>Вебсайт:</strong> <%= employee.Website %></p>

        <h3><strong>Хаяг:</strong></h3>
        <p>
          <%= employee.Street_MN %>, 
          <%= employee.City_MN %>, 
          <%= employee.Region_MN %>,
          <%= employee.POBox_MN %>, 
          <%= employee.Postal_MN %>, 
          <%= employee.Country_MN %>
        </p>
      </section>
    </div>

    <hr style="margin: 2rem 0;" />

    <!-- QR Code & Language Switcher -->
    <section class="qr-section" style="text-align: center;">
      <h3>vCard QR Code</h3>

      <div style="margin-bottom: 1rem;">
        <label for="languageSelect"><strong>QR хэл солих:</strong></label>
        <select id="languageSelect">
          <option value="EN">English</option>
          <option value="MN">Mongolian</option>
        </select>
      </div>

      <div class="qr-code">
          <img id="qrImage" alt="QR Code will appear here" />
      </div>
   
      <button id="downloadQrCard" >QR Code татах</button>
      <div style="margin-top: 1rem;">
        <label for="imageFormat">Татах төрөл:</label>
        <select id="imageFormat">
          <option value="png">PNG</option>
          <option value="jpeg">JPG</option>
          <option value="webp">webp</option>
        </select>
      </div>
    </section>
  </div>
</body>
</html>
